---
import { Icon } from 'astro-icon';
---

<section class='icons'>
	<a href='https://github.com/fdmarti' target='_blank'>
		<Icon pack='ri' name='github-fill' />
	</a>
	<a href='https://www.linkedin.com/in/fededmartinez/' target='_blank'>
		<Icon pack='mdi' name='linkedin' />
	</a>
	<a href='https://www.instagram.com/fedeeemartinez/' target='_blank'>
		<Icon pack='mdi' name='instagram' />
	</a>
</section>
<style>
	.icons {
		max-height: 55px;
		display: flex;
		justify-content: flex-end;
		padding: 50px 0;
	}

	a {
		color: #fff;
		margin-right: 30px;
		width: 50px;
		height: 50px;

		display: flex;
		justify-content: center;

		border: solid 2px #fff;
		border-radius: 50%;
	}

	a:hover {
		border: solid 2px #e882e8;
		color: #e882e8;
	}

	svg {
		width: 35px;
	}

	@media (max-width: 992px) {
		.icons {
			justify-content: center;
			gap: 1.5rem;
		}

		a{
			margin: 0;
		}
	}
</style>
